{
    "include": ["src/**/*.ts"],
    "exclude": ["src/test.ts", "src/**/*.spec.ts", "src/**/*.d.ts"],
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022", "dom"],
        "module": "es2022",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true
    }
}